<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodKart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_orange_200</item>
        <item name="colorSecondaryVariant">@color/secondary_orange_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/nightSurface</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- No Actionbar theme   -->
    <style name="Theme.FoodKart.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>

    </style>


    <!-- Full screen theme   -->
    <style name="Theme.FoodKart.FullScreen" parent="Theme.FoodKart.NoActionBar">
        <item name="windowNoTitle">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>


</resources>